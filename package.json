{
  "name": "sholat-reminder",
  "displayName": "Sholat Reminder",
  "icon": "media/icon.png",
  "license": "SEE LICENSE IN LICENSE.md",
  "description": "",
  "version": "1.2.3",
  "author": "Aditya Putra Pratama",
  "publisher": "AdityaPutraPratama",
  "engines": {
    "vscode": "^1.92.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adityaputra11/sholat-reminder.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sholat-reminder-view",
          "title": "Sholat Reminder",
          "icon": "media/activity-icon.svg"
        }
      ]
    },
    "views": {
      "sholat-reminder-view": [
        {
          "id": "sholat-schedule",
          "name": "Jadwal Sholat Hari Ini"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.searchCity",
        "title": "Sholat Reminder: Search Indonesian City"
      },
      {
        "command": "extension.setCityID",
        "title": "Sholat Reminder: Set City ID"
      },
      {
        "command": "extension.searchCountry",
        "title": "Sholat Reminder: Search Country"
      },
      {
        "command": "extension.searchState",
        "title": "Sholat Reminder: Search State"
      },
      {
        "command": "extension.searchCityState",
        "title": "Sholat Reminder: Search City in State"
      },
      {
        "command": "extension.toogleCityName",
        "title": "Sholat Reminder: Toggle City Name"
      },
      {
        "command": "extension.refreshSholatSchedule",
        "title": "Sholat Reminder: Refresh"
      },
      {
        "command": "extension.setReminderBeforePray",
        "title": "Sholat Reminder: Set Reminder Before Pray"
      }
    ]
  },
  "scripts": {
    "vscode:build": "vsce package",
    "vscode:prepublish": "bun run build:prod",
    "compile": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build:prod": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "pretest": "bun run compile && bun run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.7",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "country-state-city": "^3.2.1"
  }
}